{
    "manifest_version": 2,
    "name": "Daily Do",
    "version": "0.4.0",

    "author": "Matan Kotler-Berkowitz and Noam Raz",
    "description": "Get it done - today",

    "chrome_url_overrides" : {
        "newtab": "pages/newtab/newtab.html"
    },

    "permissions": [
        "storage",
        "tabs"
    ],

    "icons": {
        "16": "assets/icon/icon16.png",
        "48": "assets/icon/icon48.png",
        "128": "assets/icon/icon128.png"
    },

    "background": {
      "scripts": [
        "background/oninstall.js"
      ]
    },

    "options_ui": {
      "page": "pages/options/options.html",
      "chrome_style": true,
      "open_in_tab": false
    }

}
